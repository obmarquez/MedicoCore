
@{
    ViewData["Title"] = "Confirmatorios";
}

<form method="get" class="form-horizontal" asp-controller="Consultas" asp-action="Confirmatorios">
    <div class="panel panel-default">
        <div class="panel-heading">
            Información relacionado a Confirmatorios.<small>Rango de fechas</small>
        </div>
        <div class="panel-body">

            <div class="row form-group">

                <div class="form-group">

                    <label class="col-sm-1 control-label">De</label>

                    <div class="col-sm-3">
                        <div id="data_1">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" id="fecha1" name="fecha1" class="form-control">
                            </div>
                        </div>
                    </div>

                    <label class="col-sm-1 control-label">A</label>

                    <div class="col-sm-3">
                        <div id="data_1">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" id="fecha2" name="fecha2" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </div>

                </div>

            </div>

        </div>
    </div>
</form>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Confirmatorios - Carta Compromiso - Electrocardiogramas</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover no-margins">
                        <thead>
                            <tr>
                                <td>Médico</td>
                                <td>Confirmatrios</td>
                                <td>Cartas Comp.</td>
                                <td>Electros</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (@ViewBag.Conteos != null)
                            {
                                @foreach (var itemCon in @ViewBag.Conteos)
                                {
                                    <tr>
                                        <td>@itemCon.Medico</td>
                                        <td>@itemCon.Confirma</td>
                                        <td>@itemCon.CartaC</td>
                                        <td>@itemCon.Electro</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Analitos detectados</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover no-margins">
                        <thead>
                            <tr>
                                <td>Analito</td>
                                <td>Mar.</td>
                                <td>Coc.</td>
                                <td>Ben.</td>
                                <td>Bar.</td>
                                <td>Anf.</td>
                                <td>Met.</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Analitos != null)
                            {
                                @foreach (var itemAnal in @ViewBag.Analitos)
                                {
                                    <tr>
                                        <td>Analito</td>
                                        <td>@itemAnal.Marihuana</td>
                                        <td>@itemAnal.Cocaina</td>
                                        <td>@itemAnal.Benzodiacepina</td>
                                        <td>@itemAnal.Barbiturico</td>
                                        <td>@itemAnal.Anfetamina</td>
                                        <td>@itemAnal.Metanfetamina</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detallado Evaluado y analitos</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover no-margins">
                        <thead>
                            <tr>
                                <td>Evaluado</td>
                                <td>Genero</td>
                                <td>Edad</td>
                                <td>Dependencia</td>
                                <td>Fecha</td>
                                <td>Folio</td>
                                <td>Marhuana</td>
                                <td>Cocaina</td>
                                <td>Benzod.</td>
                                <td>Barbit.</td>
                                <td>Anfet.</td>
                                <td>Metanf.</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.AnalitosDetallado != null)
                            {
                                @foreach (var itemAnaDet in ViewBag.AnalitosDetallado)
                                {
                                    <tr>
                                        <td>@itemAnaDet.Evaluado</td>
                                        <td>@itemAnaDet.Sexo</td>
                                        <td>@itemAnaDet.Edad</td>
                                        <td>@itemAnaDet.Dependencia</td>
                                        <td>@itemAnaDet.Fecha</td>
                                        <td>@itemAnaDet.Folio</td>
                                        <td style="text-align:center">
                                            @if (@itemAnaDet.RS_MARI == true)
                                            {
                                                <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            }
                                        </td>
                                        <td style="text-align:center">
                                            @if (@itemAnaDet.RS_COCA == true)
                                            {
                                                <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            }
                                        </td>
                                        <td style="text-align:center">
                                            @if (@itemAnaDet.RS_BENZO == true)
                                            {
                                                <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            }
                                        </td>
                                        <td style="text-align:center">
                                            @if (@itemAnaDet.RS_BARBI == true)
                                            {
                                                <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            }
                                        </td>
                                        <td style="text-align:center">
                                            @if (@itemAnaDet.RS_ANFE == true)
                                            {
                                                <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            }
                                        </td>
                                        <td style="text-align:center">
                                            @if (@itemAnaDet.RS_META == true)
                                            {
                                                <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @*-- css --*@
    <link href="~/css/plugins/datapicker/datepicker3.css" rel="stylesheet" />
    <link href="~/css/plugins/iCheck/custom.css" rel="stylesheet" />

    @*-- js --*@

    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/plugins/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/js/plugins/iCheck/icheck.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 50,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'excel', title: 'EstCncaConcentrado' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });

        $('#data_1 .input-group.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true,
            format: "dd/mm/yyyy"
        });
    </script>

}